<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:padding="@dimen/grid_padding_margin">

    <!-- Play and share buttons -->
    <ImageView
        android:id="@+id/container_detail_trailer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:id="@+id/container_detail_trailer_buttons"
        android:background="@color/dim_foreground_disabled_material_light"/>

    <LinearLayout
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal|center_vertical">

        <ImageView
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/activity_padding_margin"
            android:id="@+id/imageview_video_play_button"
            android:src="@drawable/ic_play_circle_outline_white_48dp"/>

        <ImageView
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/activity_padding_margin"
            android:id="@+id/imageview_video_share_button"
            android:src="@drawable/ic_share_white_48dp"/>

    </LinearLayout>

</FrameLayout>
    <!-- Strings for formatting movie detail data -->

    <!-- Poster rating -->
    <string name="format_poster_rating">
        " "<xliff:g id="rating">%1$s</xliff:g> (<xliff:g id="vote_count">%2$s</xliff:g>)
    </string>

    <!-- Tagline -->
    <string name="format_detail_tagline">
        <xliff:g id="tagline">\u0022%1$s\u0022</xliff:g>
    </string>

    <!-- Rating, for glance info -->
    <string name="format_detail_rating">
        (<xliff:g id="vote_count">%1$s</xliff:g>)
    </string>

    <!-- Release and duration -->
    <string name="format_detail_release">
        <xliff:g id="release_date">%1$s</xliff:g>
    </string>

    <string name="format_detail_release_runtime">
        <xliff:g id="release_date">%1$s</xliff:g> | <xliff:g id="runtime">%2$s</xliff:g> min
    </string>

    <string name="format_detail_release_runtime_mpaa">
        <xliff:g id="release_date">%1$s</xliff:g> | <xliff:g id="runtime">%2$s</xliff:g> min |
        <xliff:g id="mpaa_raing">%3$s</xliff:g>
    </string>

    <string name="format_detail_release_mpaa">
        <xliff:g id="release_date">%1$s</xliff:g> | <xliff:g id="mpaa_raing">%2$s</xliff:g>
    </string>

    <!-- Actors -->
    <string name="format_detail_actors">
        <xliff:g id="actor_name">%1$s</xliff:g> (<xliff:g id="character_name">%2$s</xliff:g>)
    </string>

    <!-- Directors -->
    <string name="format_detail_directors">
        <xliff:g id="director_name">%1$s</xliff:g> (<xliff:g id="director_department">%2$s</xliff:g>)
    </string>

    <!-- Writers -->
    <string name="format_detail_writers">
        <xliff:g id="writer_name">%1$s</xliff:g> (<xliff:g id="writer_department">%2$s</xliff:g>)
    </string>

    <!-- Genres -->
    <string name="format_detail_genres">
        <xliff:g id="genre">%1$s</xliff:g>
    </string>

    <!-- Footer -->
    <string name="format_detail_footer">
        <xliff:g id="tmdb_url">\u003ca href\u003d\u0027%1$s\u0027\u003e</xliff:g>
        The Movie Database<xliff:g id="url_end">\u003c\u002fa\u003e</xliff:g>
    </string>

    <!-- Rating, for reviews -->
    <string name="format_detail_reviews_rating">
        <xliff:g id="vote_count">%1$s</xliff:g> <xliff:g id="votes_tense">%2$s</xliff:g>
    </string>

    <!-- Reviews -->
    <string name="format_detail_reviews">
        <xliff:g id="reviews_count">%1$s</xliff:g> <xliff:g id="reviews_tense">%2$s</xliff:g>
    </string>

    <!-- Adding/Removing movie from favorites -->
    <string name="format_modify_favorites">
        <xliff:g id="add_remove">%1$s</xliff:g> <xliff:g id="title_movie">%2$s</xliff:g>
        <xliff:g id="to_from">%3$s</xliff:g> favorites.
    </string>

    <!-- Sharing messages -->
    <string name="format_share_movie_no_trailer">
        Hey, check out <xliff:g id="movie_title">%1$s</xliff:g> at The Movie Database:
        <xliff:g id="tmdb_url">%2$s</xliff:g>
    </string>

    <string name="format_share_movie_with_trailer">
        Hey, check out <xliff:g id="movie_title">%1$s</xliff:g>:
        <xliff:g id="trailer_url">%2$s</xliff:g>
    </string>

    <string name="format_share_review">
        Review for <xliff:g id="movie_title">%1$s</xliff:g> by
        <xliff:g id="movie_review_author">%2$s</xliff:g>:
        <xliff:g id="movie_review_url">%3$s</xliff:g> (from The Movie Database).
    </string>

    <string name="format_share_trailer">
        Trailer for <xliff:g id="movie_title">%1$s</xliff:g>:
        <xliff:g id="movie_review_url">%2$s</xliff:g>
    </string>

